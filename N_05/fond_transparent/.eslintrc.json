// N_09/fond_transparent/.eslintrc.json
{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true,
    "cypress/globals": true
  },
  "extends": [
    "airbnb-base",
    "plugin:cypress/recommended"
  ],
  "plugins": [
    "cypress"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-plusplus": "off",
    "no-use-before-define": ["error", { "functions": false, "classes": true, "variables": true }]
  }
}