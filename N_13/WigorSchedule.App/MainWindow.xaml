<Window x:Class="WigorSchedule.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WigorSchedule.App"
        mc:Ignorable="d"
        Title="Wigor Schedule" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="Enter your credentials or use stored cookies." Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Username:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Column="1" x:Name="UsernameTextBox" Margin="5"/>
                <TextBlock Grid.Column="2" Text="Password:" VerticalAlignment="Center" Margin="5"/>
                <PasswordBox Grid.Column="3" x:Name="PasswordBox" Margin="5"/>
                <Button Grid.Column="4" x:Name="RefreshButton" Content="Refresh Schedule" Click="RefreshButton_Click" Margin="5"/>
            </Grid>
        </StackPanel>

        <ListView Grid.Row="1" x:Name="ScheduleListView">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Course" Width="150" DisplayMemberBinding="{Binding CourseName}"/>
                    <GridViewColumn Header="Teacher" Width="120" DisplayMemberBinding="{Binding Teacher}"/>
                    <GridViewColumn Header="Room" Width="100" DisplayMemberBinding="{Binding Room}"/>
                    <GridViewColumn Header="Start Time" Width="150" DisplayMemberBinding="{Binding StartTime, StringFormat='g'}"/>
                    <GridViewColumn Header="End Time" Width="150" DisplayMemberBinding="{Binding EndTime, StringFormat='g'}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <TextBlock Grid.Row="2" x:Name="StatusTextBlock" Text="Ready" VerticalAlignment="Center" Margin="0,5,0,0"/>
    </Grid>
</Window>
